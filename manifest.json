{
    "manifest_version": 3,
    "name": "Pear",
    "description": "Search in safety with the web navigator Pear",
    "version": "1.0",     
    "action": {
        "default_icon": {
            "16": "images/pear.png",
            "32": "images/pear.png",
            "48": "images/pear.png",
            "128": "images/pear.png"
        }
    },
    "icons": {
        "16": "images/pear.png",
        "32": "images/pear.png",
        "48": "images/pear.png",
        "128": "images/pear.png"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "chrome_url_overrides": {
        "newtab": "index.html"
    }
}